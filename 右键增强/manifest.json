{
  "manifest_version": 3,
  "name": "右键增强",
  "version": "1.0.0",
  "author": "sherlocknieh",
  "description": "补充官方右键缺失的一些功能",
  "homepage_url": "https://github.com/sherlocknieh/Browser-Extensions",

  "permissions": ["contextMenus", "storage", "sidePanel", "activeTab"],
  
  "options_page": "options/options.html",

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/sweetalert2.all.min.js",
        "content.js"]
    }
  ]

}