{
  "manifest_version": 3,
  "name": "右键增强",
  "version": "1.0.0",
  "author": "sherlocknieh",
  "description": "补充官方右键缺失的一些功能",
  "homepage_url": "https://github.com/sherlocknieh/Browser-Extensions",

  "permissions": ["contextMenus", "storage", "sidePanel"],

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  
  "options_page": "options/options.html",

  "side_panel": {
    "default_path": "options/options.html"
  },

  "background": {
    "service_worker": "main.js"
  }
}