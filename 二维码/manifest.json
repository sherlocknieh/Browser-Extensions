{
  "manifest_version": 3,
  "name": "二维码",
  "version": "1.0.0",
  "author": "sherlocknieh",
  "description": "生成和识别二维码",
  "homepage_url": "https://github.com/sherlocknieh/Browser-Extensions",

  "permissions": ["contextMenus", "storage", "activeTab"],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jsQR.js",
        "content.js"]
    }
  ]
}